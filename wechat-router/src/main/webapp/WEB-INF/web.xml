<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">	
	<servlet>
	    <description>Callback</description>
	    <display-name>Callback</display-name>
	    <servlet-name>Callback</servlet-name>
	    <servlet-class>org.jcommon.com.wechat.servlet.Callback</servlet-class>
	    <load-on-startup>0</load-on-startup>
	</servlet>
	<servlet-mapping>
	    <servlet-name>Callback</servlet-name>
	    <url-pattern>/callback</url-pattern>
	</servlet-mapping> 
	<servlet>
	    <description>MediaServlet</description>
	    <display-name>MediaServlet</display-name>
	    <servlet-name>MediaServlet</servlet-name>
	    <servlet-class>org.jcommon.com.wechat.servlet.MediaServlet</servlet-class>
	    <load-on-startup>0</load-on-startup>
	</servlet>
	<servlet-mapping>
	    <servlet-name>MediaServlet</servlet-name>
	    <url-pattern>/media/*</url-pattern>
	</servlet-mapping> 
	<servlet>
	    <description>AccessToken</description>
	    <display-name>AccessToken</display-name>
	    <servlet-name>AccessToken</servlet-name>
	    <servlet-class>org.jcommon.com.wechat.servlet.AccessToken</servlet-class>
	    <load-on-startup>0</load-on-startup>
	</servlet>
	<servlet-mapping>
	    <servlet-name>AccessToken</servlet-name>
	    <url-pattern>/token/*</url-pattern>
	</servlet-mapping> 
	<listener>
	  <listener-class>org.jcommon.com.util.system.SystemManager</listener-class>
    </listener>
</web-app>
